{
  "manifest_version": 3,
  "name": "Zync Wallet",
  "version": "0.1.0",
  "description": "Browser wallet for Zync Protocol - ZRC-20 tokens, NFTs, and inscriptions on Zcash",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "permissions": [
    "storage",
    "unlimitedStorage",
    "tabs",
    "sidePanel"
  ],
  "side_panel": {
    "default_path": "src/popup/index.html"
  },
  "host_permissions": [
    "https://explorer.testnet.z.cash/*",
    "https://testnet.zcash.community/*",
    "https://api.blockchair.com/*",
    "https://insight.zcash.com/*",
    "https://zcashnetwork.info/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": ["inject.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
