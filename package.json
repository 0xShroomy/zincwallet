{
  "name": "zync-wallet",
  "version": "0.1.0",
  "description": "Browser extension wallet for Zync Protocol (Zcash inscriptions, ZRC-20, NFTs)",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && node scripts/postbuild.js",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext ts,tsx",
    "type-check": "tsc --noEmit",
    "package": "pnpm build && node scripts/package.js"
  },
  "dependencies": {
    "@noble/hashes": "^2.0.1",
    "@noble/secp256k1": "^2.0.0",
    "@scure/bip32": "^2.0.1",
    "@scure/bip39": "^2.0.1",
    "@types/qrcode": "^1.5.6",
    "bip32": "^4.0.0",
    "bip39": "^3.1.0",
    "bitcoinjs-lib": "^6.1.5",
    "bs58": "^6.0.0",
    "qrcode": "^1.5.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tiny-secp256k1": "^2.2.4",
    "varuint-bitcoin": "^1.1.2",
    "webextension-polyfill": "^0.10.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/bip39": "^3.0.0",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@types/webextension-polyfill": "^0.10.7",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.1.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "happy-dom": "^12.10.3",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-plugin-web-extension": "^4.1.0",
    "vitest": "^1.1.1"
  },
  "keywords": [
    "zcash",
    "zync",
    "wallet",
    "browser-extension",
    "web3",
    "zrc20",
    "nft",
    "inscriptions"
  ],
  "license": "MIT"
}
